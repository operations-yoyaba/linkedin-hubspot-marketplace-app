{
  "name": "LinkedIn-HubSpot Sync",
  "description": "Automatically sync LinkedIn ad performance data to HubSpot companies and contacts. Get insights into which companies are engaging with your LinkedIn ads and track ROI across your marketing funnel.",
  "scopes": [
    "contacts",
    "crm.objects.companies.read",
    "crm.objects.companies.write",
    "crm.objects.contacts.read",
    "crm.objects.contacts.write",
    "crm.objects.deals.read",
    "crm.objects.deals.write",
    "forms",
    "oauth"
  ],
  "public": false,
  "auth": {
    "type": "oauth2",
    "scopes": [
      "contacts",
      "crm.objects.companies.read",
      "crm.objects.companies.write",
      "crm.objects.contacts.read",
      "crm.objects.contacts.write",
      "crm.objects.deals.read",
      "crm.objects.deals.write"
    ]
  },
  "webhooks": [
    {
      "name": "app.install",
      "url": "https://linkedin-hubspot.yoyaba.com/webhooks/hubspot/install",
      "subscriptionType": "contact.propertyChange"
    },
    {
      "name": "app.uninstall", 
      "url": "https://linkedin-hubspot.yoyaba.com/webhooks/hubspot/uninstall",
      "subscriptionType": "contact.propertyChange"
    },
    {
      "name": "subscription.change",
      "url": "https://linkedin-hubspot.yoyaba.com/webhooks/hubspot/subscription",
      "subscriptionType": "contact.propertyChange"
    }
  ],
  "urls": {
    "auth": "https://linkedin-hubspot.yoyaba.com/oauth/hubspot/start",
    "admin": "https://linkedin-hubspot.yoyaba.com/dashboard",
    "install": "https://linkedin-hubspot.yoyaba.com/oauth/hubspot/callback"
  },
  "ui": {
    "cards": [
      {
        "name": "sync-status",
        "label": "Sync Status",
        "description": "View LinkedIn-HubSpot sync status and recent activity",
        "url": "https://linkedin-hubspot.yoyaba.com/cards/sync-status"
      },
      {
        "name": "company-mapping",
        "label": "Company Mapping", 
        "description": "Manage LinkedIn to HubSpot company mappings",
        "url": "https://linkedin-hubspot.yoyaba.com/cards/company-mapping"
      }
    ]
  },
  "settings": [
    {
      "name": "linkedin_account",
      "label": "LinkedIn Ad Account",
      "description": "Select which LinkedIn ad account to sync data from",
      "type": "string",
      "required": true
    },
    {
      "name": "sync_frequency",
      "label": "Sync Frequency",
      "description": "How often to sync data from LinkedIn to HubSpot",
      "type": "select",
      "options": [
        {"label": "Daily", "value": "daily"},
        {"label": "Weekly", "value": "weekly"},
        {"label": "Monthly", "value": "monthly"}
      ],
      "default": "daily"
    }
  ]
}
